<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/padding_8dp"
    android:layout_marginStart="@dimen/padding_8dp"
    android:layout_marginTop="@dimen/padding_8dp"
    android:elevation="@dimen/elevation"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_16dp"
            android:paddingStart="@dimen/padding_16dp"
            android:paddingTop="@dimen/padding_16dp"
            android:textColor="@color/unreadTitle"
            android:textSize="@dimen/title_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/padding_16dp"
            android:paddingStart="@dimen/padding_16dp"
            android:paddingTop="@dimen/padding_8dp">

            <TextView
                android:id="@+id/text_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/author_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/padding_4dp"
                android:paddingStart="@dimen/padding_4dp"
                android:text="@string/bulletpoint"
                android:textSize="@dimen/author_size" />

            <TextView
                android:id="@+id/text_pub_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/author_size" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_feed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_16dp" />

            <TextView
                android:id="@+id/text_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/transparent"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="@dimen/padding_8dp"
                android:textColor="@android:color/white"
                android:visibility="gone" />

        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>